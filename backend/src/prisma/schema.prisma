datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String         @id @default(uuid()) @db.Uuid
  email         String         @unique
  name          String
  password_hash String?
  created_at    DateTime       @default(now())
  area          Area[]
  user_service  UserService[]
  oauth_link    OauthLink[]
  @@map("user")
}

model UserService {
  id             String   @id @default(uuid()) @db.Uuid
  service_id     String
  service_config Json?
  errored        Boolean  @default(false)
  user_id        String   @db.Uuid
  user           User     @relation(fields: [user_id], references: [id])
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt
  @@map("user_service")
}

model Area {
  id            String          @id @default(uuid()) @db.Uuid
  name          String
  user_id       String          @db.Uuid
  user          User            @relation(fields: [user_id], references: [id])
  created_at    DateTime        @default(now())
  updated_at    DateTime        @updatedAt
  area_action   AreaAction[]
  area_reaction AreaReaction[]
  @@map("area")
}

model AreaAction {
  id          String   @id @default(uuid()) @db.Uuid
  action_name String
  area_id     String   @db.Uuid
  area        Area     @relation(fields: [area_id], references: [id])
  config      Json?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  @@map("area_action")
}

model AreaReaction {
  id            String   @id @default(uuid()) @db.Uuid
  reaction_name String
  area_id       String   @db.Uuid
  area          Area     @relation(fields: [area_id], references: [id])
  config        Json?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  @@map("area_reaction")
}

model OauthLink {
  id               String   @id @default(uuid()) @db.Uuid
  provider_name    String
  provider_user_id String
  user_id          String   @db.Uuid
  user             User     @relation(fields: [user_id], references: [id])
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt
  @@map("oauth_link")
  @@unique([provider_name, provider_user_id])
}
